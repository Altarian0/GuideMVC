@model GuideMVC_.ViewModels.EditUserModel
@{
}

<form asp-action="EditUser" asp-controller="User">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id"/>
    </div>
    <div class="form-group">
        <label asp-for="FirstName" class="control-label">Имя</label>
        <input type="text" asp-for="FirstName" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="LastName" class="control-label">Фамилия</label>
        <input type="text" asp-for="LastName" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="MiddleName" class="control-label">Отчество</label>
        <input type="text" asp-for="MiddleName" class="form-control"/>
    </div>
    <div style="display: flex">
        <div class="form-group" style="width: 25%">
            <label asp-for="PassportSeries" class="control-label">Серия паспорта</label>
            <input type="text" asp-for="PassportSeries" class="form-control"/>
        </div>
        <div class="form-group" style="width: 25%; margin-left: 10px">
            <label asp-for="PassportNumber" class="control-label">Номер паспорта</label>
            <input type="text" asp-for="PassportNumber" class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="BirthDate" class="control-label">Дата рождения</label>
        <input type="date" asp-for="BirthDate" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="GenderId" class="control-label">Пол</label>
        <select asp-for="GenderId" class="form-control">
            <option selected>Пол</option>
            @foreach (var gender in Model.Genders)
            {
                <option value="@gender.Id">@gender.Name</option>
            }
        </select>   
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-outline-secondary"/>
    </div>
</form>